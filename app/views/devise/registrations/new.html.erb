<section class="p-5 mb-5">

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
     <section class="section">
              <div class="columns is-centered">
                  <div class="column is-4 p-5 loginform">
                        <h1 class="title is-1 has-text-white has-text-centered">Sign up</h1>
                        <div class="form-data">
                            <div class="field">
                                <div class="control">
                                    <%= f.input :name, required: true, input_html: {class:"input"}, label_html: {class: "label has-text-white"},wrapper: false %>
                                </div>
                            </div>
                            <div class="field">
                                <div class="control">
                                    <%= f.input :email, required: true, input_html: {class:"input"}, label_html: {class: "label has-text-white"},wrapper: false %>
                                </div>
                            </div>
                            <div class="field">
                                <div class="control">
                                    <%= f.input :password, required: true, input_html: {class:"input"}, label_html: {class: "label has-text-white"},wrapper: false %>
                                </div>
                                <div class="help has-text-white">
                                    <%= ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
                                </div>
                            </div>
                            <div class="field">
                                <div class="control">
                                    <%= f.input :password_confirmation,required: true, input_html: {class:"input"}, label_html: {class: "label has-text-white"},wrapper: false %>
                                </div>
                            </div>
                            <div class="field">
                                <div class="control">
                                    <%= f.submit "Sign up",data: {turbo: false},class: "button is-primary" %>
                                </div>
                            </div>
                            <div class="links mt-5 has-text-white">
                                Already have an account ?
                                <%= link_to "Sign in",new_user_session_path,class: "underline text-blue-500 hover:text-white" %>
                            </div>
                        </div>
              </div>
          </div>
     </section>    
<% end %>
</div>
</div>
</div>
</section>
